@page "/login"
@using Qwirkle.WebApi.Client.Blazor.Services.Implementations
@layout LoginLayout
@inject NavigationManager navigationManager
@inject IdentityAuthenticationStateProvider authStateProvider

<PageTitle>Login</PageTitle>

<h1 class="h2 font-weight-normal login-title">Qwirkle</h1>

<EditForm class="form-signin" OnValidSubmit="LoginAsUser" Model="LoginParameters">
    <DataAnnotationsValidator />
    <h4 class="font-weight-normal text-center">Login</h4>

    <label for="inputUsername" class="sr-only">User Name</label>
    <InputText id="inputUsername" class="form-control" placeholder="Username" @bind-Value="LoginParameters.UserName" autofocus />
    <ValidationMessage id="validationUserName" For="@(() => LoginParameters.UserName)" />

    <label for="inputPassword" class="sr-only">Password</label>
    <InputText type="password" id="inputPassword" class="form-control" placeholder="Password" @bind-Value="LoginParameters.Password" />
    <ValidationMessage id="validationPassword" For="@(() => LoginParameters.Password)" />

    <div class="form-check m-3">
        <InputCheckbox id="inputRememberMe" class="form-check-input" @bind-Value="@LoginParameters.RememberMe" />
        <label class="form-check-label" for="inputRememberMe">Remember Me</label>
    </div>

    <button id="btnSignIn" class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

    <label id="lblError" class="text-danger">@Error</label>

    <NavLink href="register">
        <h6 class="font-weight-normal text-center">Create account</h6>
    </NavLink>
</EditForm>

<div class="form-signin">
    <button id="btnLoginAsGuest" class="btn btn-lg btn-primary btn-block" @onclick="@LoginAsGuest">Play as guest</button>
</div>