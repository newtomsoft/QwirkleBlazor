<MudCard Outlined="true">
    <MudCardContent>
        <MudBadge Color="Color.Primary">
            <MudAvatar Color="Color.Info" Variant="@(PlayerInfo.IsTurn ? Variant.Filled : Variant.Outlined)">@PlayerInfo.Pseudo[0]</MudAvatar>
        </MudBadge>
        @PlayerInfo.Points points
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Chat</MudButton>
    </MudCardActions>
</MudCard>